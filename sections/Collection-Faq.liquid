<div class="collection_FAQ_sec">
  <div class="page-width">
    {% for i in (1..3) %}
      {% assign faqtitle = 'faq_title' | append: i %}
      {% assign title = collection.metafields.custom[faqtitle] %}
      {% assign faqdes = 'faq_content' | append: i %}
      {% assign description = collection.metafields.custom[faqdes] %}
      {% if title != blank and description != blank %}
        <h3 class="accordion_title">{{ title }}</h3>
        <div class="accordion_des">{{ description | metafield_text }}</div>
      {% endif %}
    {% endfor %}
  </div>
</div>
<script>
  $('.accordion_title').click(function(){
    $(this).toggleClass('active');
    $(this).next('.accordion_des').slideToggle();
    $(this).siblings('.accordion_title').removeClass('active');
     $(this).next('.accordion_des').siblings('.accordion_des').slideUp();
  })
</script>
